<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <RadioGroup
            android:id="@+id/volumeRadioGroupTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/radioTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select volume option: "
                />
            <RadioButton
                android:id="@+id/radioButtonUpdateDeleteTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do Not Disturb" />

            <RadioButton
                android:id="@+id/radioButtonUpdateDeleteTime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vibrate" />

            <RadioButton
                android:id="@+id/radioButtonUpdateDeleteTime3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Normal Volume" />
        </RadioGroup>




    </LinearLayout>

    <Button
        android:id="@+id/startTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Select Start time"
        style="?android:attr/buttonBarButtonStyle"
        android:textColor="@color/primary_dark"/>

    <Spinner
        android:id="@+id/timeSelectionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:entries="@array/time_repetition_choices" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUpdateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/buttonDeleteTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/primary"/>

    </LinearLayout>



</LinearLayout>